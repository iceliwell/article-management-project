<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%- include head %>
  </head>
  <body>
    <%- include('bar', {username: username}) %>

    <div class="list">
      <div class="row">
        <span>序号</span>
        <span>作者</span>
        <span>文章标题</span>
        <span>时间</span>
        <span>操作</span>
      </div>
      <% pageInfo.articleList.map((item, index) => { %>
      <div class="row row-content">
        <span><%= index+1 %></span>
        <span><%= item.username %></span>
        <span><a href="/detail?id=<%=item.time%>"><%= item.title %></a></span>
        <span><%= item.creatTime %></span>
        <span>
          <a href="/write?id=<%=item.time%>&page=<%=pageInfo.curPage%>">编辑</a>
          <a href="/article/delete?id=<%=item.time%>&page=<%=pageInfo.curPage%>"
            >删除</a
          >
        </span>
      </div>
      <% }) %>
      <div class="pages">
        <% for(let i=1; i<=pageInfo.total;i++) { %>
        <a href="/?page=<%= i %>"><%= i %></a>
        <% } %>
      </div>
    </div>
  </body>
</html>
